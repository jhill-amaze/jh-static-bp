	<h2>Colour palette</h2>
	<div class="demopage__section colour-palette grid">
		<ul class="colour-palette__list row">
			{{#each demo.colourPalette.colourNames}}
				<li class="colour-palette__swatch colour-palette__swatch--{{this}} col-xs-3 col-md-2">
					<span class="colour-palette__swatch-name">{{this}}</span>
				</li>
			{{/each}}
		</ul>
	</div>
	
	<h2>Icon font</h2>
	<div class="demopage__section icons-palette grid">
		<ul class="icons-palette__list row">
			{{#each demo.iconPalette.iconNames}}
				<li class="icons-palette__item col-xs-1 col-md-1">
					<span class="icons-palette__item-icon icon icon-{{this}}"></span>
					<span class="icons-palette__item-name">{{this}}</span>
				</li>
			{{/each}}
		</ul>
	</div>

	<h2>Icon mixin test</h2>
