{
	"name": "static-bp",
	"version": "1.0.0",
	"description": "A minimal boilerplate to be used as a starting point for static site builds. Made with up to date tooling. Built to be as simple and have as few dependencies as possible.",
	"scripts": {
		"setup": "npm run setup:npm && npm run setup:bp",
		"setup:npm": "npm install",
		"setup:bp": "npm run setup:mkdirs && npm run setup:css && npm run make:iconfont && npm run make:fonts",
		"setup:mkdirs": "mkdirp ./temp && mkdirp ./src/sass/lib && mkdirp ./src/sass/lib/iconfont",
		"setup:css": "npm run setup:copy:normalizecss",
		"setup:copy:normalizecss": "copyfiles --soft --flat \"./node_modules/normalize.css/normalize.css\" ./src/sass/lib",
		"make:fonts": "npm run clean:temp:fonts && copyfiles --soft --flat ./src/assets/fonts/*.ttf ./temp/fonts/ && node ./node-scripts/convert-fonts.js ./src/assets/fonts/ ./temp/fonts/ ./src/sass/lib/fontfaces.css --woff2",
		"make:iconfont:generate": "node ./node-scripts/iconfont-generator.js ./src/assets/icons/ ./temp/fonts/iconfont ./temp/css/lib/iconfont.css",
		"make:iconfont:sass": "node ./node-scripts/map-icons.js ./temp/css/lib/iconfont.css ./src/sass/lib/_iconmap.scss",
		"make:iconfont": "npm run make:iconfont:generate && npm run make:iconfont:sass",
		"test": "echo \"no test specified\" && exit 1",
		"clean:temp:fonts": "del-cli ./temp/fonts/*.{ttf,woff,woff2,eot,svg} && del-cli ./src/sass/lib/fontfaces.css && del-cli ./temp/css/lib/fontfaces.css",
		"clean:build": "del-cli ./build/**/*",
		"clean:release": "del-cli ./release/**/*",
		"clean": "npm run clean:build && npm run clean:release",
		"mkdirs": "mkdirp ./build/js && mkdirp ./build/css && mkdirp ./build/fonts",
		"dev:html": "eleventy --config=./config/dev/eleventy.config.js --watch",
		"prod:html": "eleventy --config=./config/prod/eleventy.config.js",
		"css:copydeps": "copyfiles --soft --flat ./src/sass/lib/**/*.css ./temp/css/lib",
		"copy:fonts": "copyfiles --soft --flat ./temp/fonts/**/*.{eot,svg,ttf,woff,woff2} ./build/fonts",
		"copy:webfonts": "copyfiles --soft --flat ./src/assets/webfonts/**/*.{eot,svg,ttf,woff,woff2} ./build/fonts",
		"copy:img": "copyfiles --soft --flat ./src/assets/img/**/* ./build/img",
		"copy:favicon": "copyfiles --soft --flat ./src/assets/favicon.ico ./build/",
		"copy:assets": "npm run copy:fonts && npm run copy:webfonts && npm run copy:img && npm run copy:favicon",
		"check:js": "es-check es5 \"./build/js/*.js\"",
		"check": "npm run check:js",
		"prod:css:build": "npm run css:copydeps && node-sass ./src/sass -o ./temp/css --output-style compressed",
		"dev:css:build": "npm run css:copydeps && node-sass ./src/sass -o ./temp/css --output-style expanded",
		"dev:css:watch": "node-sass -w ./src/sass -o ./temp/css --output-style expanded",
		"prod:css:post": "postcss ./temp/css/styles.css --dir ./build/css --config ./config/prod",
		"dev:css:post": "postcss ./temp/css/styles.css --dir ./build/css --config ./config/dev --watch",
		"prod:bundle": "webpack --config ./config/prod/webpack.config.js",
		"dev:bundle": "webpack --watch --config ./config/dev/webpack.config.js",
		"prod:transform": "node ./node-scripts/transform-output.js ./config/prod/transform.config.json",
		"prod:build": "npm run copy:assets && npm run prod:css:build && concurrently \"npm run prod:css:post\" \"npm run prod:bundle\" \"npm run prod:html\"",
		"dev:build": "npm run copy:assets && npm run dev:css:build && concurrently \"npm run dev:css:watch\" \"npm run dev:css:post\" \"npm run dev:bundle\" \"npm run dev:html\" \"npm run dev:serve\"",
		"dev:serve": "browser-sync start --server ./build/ --port 3001 --files \"./build/**/*\" --config browsersync.config.js",
		"prod:serve": "browser-sync start --server ./release/ --port 3001 --files \"./release/**/*\" --config browsersync.config.js",
		"dev": "npm run clean && npm run mkdirs && npm run dev:build",
		"prod": "npm run clean && npm run mkdirs && npm run prod:build && npm run check && npm run prod:transform && npm run prod:serve"
	},
	"repository": {
		"type": "git",
		"url": "git+https://jameshill88@bitbucket.org/jameshill88/static-bp.git"
	},
	"author": "James Hill",
	"license": "ISC",
	"homepage": "https://bitbucket.org/jameshill88/static-bp#readme",
	"devDependencies": {
		"@11ty/eleventy": "^0.8.2",
		"@babel/core": "^7.4.3",
		"@babel/preset-env": "^7.4.3",
		"@webpack-cli/init": "^0.1.5",
		"autoprefixer": "^9.5.1",
		"babel-loader": "^8.0.5",
		"babel-minify-webpack-plugin": "^0.3.1",
		"babel-plugin-syntax-dynamic-import": "^6.18.0",
		"babel-preset-env": "^1.7.0",
		"browser-sync": "^2.26.5",
		"concurrently": "^4.1.0",
		"copyfiles": "^2.1.0",
		"cssnano": "^4.1.10",
		"cssnano-preset-default": "^4.0.7",
		"del-cli": "^1.1.0",
		"es-check": "^5.0.0",
		"jquery": "^3.5.0",
		"mkdirp": "^0.5.1",
		"ncp": "^2.0.0",
		"node-sass": "^4.11.0",
		"normalize.css": "^8.0.1",
		"postcss-cli": "^6.1.2",
		"postcss-import": "^12.0.1",
		"pretty": "^2.0.0",
		"ttf2woff": "^2.0.1",
		"ttf2woff2": "^2.0.3",
		"webfonts-generator": "^0.4.0",
		"webpack": "^4.30.0",
		"webpack-cli": "^3.3.1"
	},
	"dependencies": {
		"@babel/polyfill": "^7.4.4"
	}
}
